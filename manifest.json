{
  "manifest_version": 3,
  "name": "Prompt Enhancer",
  "version": "1.0.0",
  "description": "Enhance your prompts using Meta Llama-3.3-70B-Instruct-Turbo-Free via Together.ai",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.together.xyz/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Enhancer"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "encryption.js", "storage.js", "validation.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

